// pure virtual members can be called from the abstract base class

#include <iostream>
using namespace std;

class CPolygon {
	protected:
		int width, height;
	public:
		void set_values (int a, int b)
			{ width=a; height=b; }
		virtual int area (void) =0;
		void printarea (void)
			{ cout << this->area() << endl; }
	};


